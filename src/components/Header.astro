---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import SearchDialog from './SearchDialog.astro';
---

<header>
  <nav>
    <h2><a href='/'>{SITE_TITLE}</a></h2>

    <div class='internal-links'>
      <HeaderLink href='/'>blog</HeaderLink> |
      <HeaderLink href='/about/'>about</HeaderLink>
    </div>

    <div></div>
    <button id='searchButton' aria-label='search button'>
      <svg viewBox='0 0 24 24' aria-hidden='true' fill='none'>
        <defs>
          <mask id='lens-cutout'>
            <rect width='24' height='24' fill='white' />
            <circle cx='9' cy='9' r='5' fill='black' />
          </mask>
        </defs>
        <circle cx='9' cy='9' r='7' fill='currentColor' mask='url(#lens-cutout)' />
        <line x1='14.5' y1='14.5' x2='21' y2='21' stroke='currentColor' stroke-width='2.5' stroke-linecap='round' />
      </svg>
    </button>
  </nav>
</header>

<SearchDialog />

<style>
  header {
    width: 100vw;
    height: 36px;
    margin-left: auto;
    margin-right: auto;
    background: rgba(33, 35, 41, 0.6);
    border-bottom: 2px solid var(--bg-secondary);
    position: fixed;
    /* blur */
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  h2 {
    margin: 0;
    font-size: 1em;
    padding-left: 1em;
  }
  h2 a,
  h2 a.active {
    text-decoration: none;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;

    a {
      color: var(--text-color);
      border-bottom: 4px solid transparent;
      text-decoration: none;
    }

    a.active {
      text-decoration: none;
      border-bottom-color: var(--accent);
    }
  }

  .internal-links > a {
    padding-left: 1em;
    padding-right: 1em;
  }

  #searchButton {
    background-color: transparent;
    border: none;
    color: var(--text-color);
    cursor: pointer;

    &:hover {
      color: var(--accent);
    }

    > svg {
      width: 24px;
      height: 24px;
    }
  }
</style>
