---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
  <nav>
    <h2><a href='/'>{SITE_TITLE}</a></h2>

    <div class='internal-links'>
      <HeaderLink href='/'>blog</HeaderLink> |
      <HeaderLink href='/about/'>about</HeaderLink>
    </div>

    <div></div>
    <!-- <button id='searchButton' aria-label='search button'>
      <svg stroke-width='2' stroke='currentColor' fill='none'>
        <path stroke='none'></path>
        <circle cx='9' cy='9' r='7'></circle>
        <line x1='21' y1='21' x2='14' y2='14'></line>
      </svg>
    </button> -->
  </nav>
</header>

<style>
  header {
    width: 100%;
    height: 36px;
    margin-left: auto;
    margin-right: auto;
    background: rgba(var(--gray-2), 0.6);
    border-bottom: 2px solid rgb(var(--gray-1));
    position: fixed;
    /* blur */
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  h2 {
    margin: 0;
    font-size: 1em;
    padding-left: 1em;
  }
  h2 a,
  h2 a.active {
    text-decoration: none;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;

    a {
      color: var(--text-color);
      border-bottom: 4px solid transparent;
      text-decoration: none;
    }

    a.active {
      text-decoration: none;
      border-bottom-color: var(--accent);
    }
  }

  .internal-links > a {
    padding-left: 1em;
    padding-right: 1em;
  }

  #searchButton {
    background-color: transparent;
    border: none;
    color: var(--text-color);
    cursor: pointer;

    &:hover {
      color: var(--accent);
    }

    /* > svg {
      width: 24px;
      height: 24px;
    } */
  }
</style>
