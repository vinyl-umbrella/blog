---
import Card from '../components/Card.astro';
import MainLayout from '../layouts/MainLayout.astro';

const title = 'I am Manuke Engineer.';
---

<MainLayout pageTitle={title} ogDesc='temp desc'>
  <h1 class='mb-3 text-4xl font-semibold text-cyan-400'>
    {title}
  </h1>
  <div class='rounded-lg bg-slate-900 p-2'>
    <h2 class='pl-2 text-2xl font-semibold text-gray-50'>Blogs📰</h2>
    <div class='flex justify-between'>
      <Card
        href='/game'
        title='Game Blog🎮'
        desc='プレイしたゲームやクリアしたゲームなど，ゲームに関する記事'
      />
      <Card
        href='/tech'
        title='Tech Blog💻'
        desc='ITに関する学んだ技術・スキル・直面した課題とその解決法などの記事'
      />
    </div>
  </div>
  <div class='my-4 rounded-xl bg-slate-900 p-4 text-gray-200'>
    <h3 class='text-2xl font-semibold text-gray-50'>About Me</h3>
    <div class='flex'>
      <img src='/img/me.jpg' class='m-2 h-24 w-24 rounded-full' />
      <div class='text-xl'>
        I am a software engineer in Japan🇯🇵.<br />
        <span class='text-red-400'>❤</span> Web Security, AWS, OCI<br />
        <span class='text-red-400'>❤</span> Rogue lite, Rogue like, Metroidvania,
        Indie Games, RPG
      </div>
    </div>
  </div>
  <div>rss, sitemap</div>
</MainLayout>
